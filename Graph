#include <bits/stdc++.h>
using namespace std;
#define int long long int
#define endl "\n"
#define pb push_back
const int N=1e5;
vector<pair<int,int>> g[N];
// Prims Algo

int32_t main(){
	int n,e;
	cin>>n>>e;
	for(int i=0;i<e;i++){
		int x,y,w;
		cin>>x>>y>>w;
		g[x].pb({y,w});
		g[y].pb({x,w});
	}

	int par[n+1],key[n+1];
	bool mst[n+1];
	for(int i=0;i<n+1;i++){
		par[i]=-1;
		mst[i]=false;
		key[i]=INT_MAX;
	}
	key[1]=0;
	par[1]=-1;
	for(int i=1;i<n;i++){
		int u,mini=INT_MAX;
		for(int i=1;i<=n;i++){
			if(key[i]<mini and mst[i]==false){
				u=i;
				mini=key[i];
			}
		}
		mst[u]=true;
		for(auto it : g[u]){
			int v=it.F,wt=it.S;
			if(key[v]>wt and mst[v]==false){
				key[v]=wt;
				par[v]=u;
			}
		}
	}

	int cost=0;
	for(int i=1;i<=n;i++){
		cost+=key[i];
	}
	cout<<cost<<endl;
	for(int i=1;i<=n;i++){
		cout<<i<<' '<<key[i]<<endl;
	}
}
